{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@apps/*": ["app/*"],
			"@components/*": ["components/*"],
			"@helpers/*": ["helpers/*"],
			"@hooks/*": ["hooks/*"],
			"@queries/*": ["queries/*"],
			"@shared/*": ["shared/*"],
			"@t/*": ["types/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"exclude": ["node_modules"],
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
